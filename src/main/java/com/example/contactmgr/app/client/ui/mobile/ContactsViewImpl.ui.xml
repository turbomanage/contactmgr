<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:style>
        .big div {
            font-size: 3em;
            line-height: 1.1;
        }
        button.menu {
            float: right;
            font-size: 3em;
            text-align: right;
        }
    </ui:style>

    <g:FlowPanel>
        <g:FlowPanel>
            <g:Button styleName="{style.menu}" ui:field="newButton">+</g:Button>
        </g:FlowPanel>
        <c:CellTable ui:field="contactCellTable" styleName="{style.big}" />
    </g:FlowPanel>

</ui:UiBinder>