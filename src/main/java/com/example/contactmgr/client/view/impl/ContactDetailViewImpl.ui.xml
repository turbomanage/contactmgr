<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .container {
            height: 100%;
            position: absolute;
            width: 100%;
        }
        .button {
            background-color: #1790D2;
            border: 0;
            border-color: transparent;
            border-radius: 7px;
            color: #fff;
            float: right;
            font-size: 1rem;
            font-weight: bold;
            margin: 0.1rem;
            padding: 0.3rem;
            text-align: right
        }
        .centered {
            left: 50%;
            position: absolute;
            top: 50%;
            transform: translate(-50%, -50%);
            width: 70%;
        }

        .input {
            background-color: white;
            border: 0;
            border-radius: 7px;
            font-size: 1.5rem;
            height: 2.2rem;
            width: 100%;
        }
    </ui:style>

    <g:FlowPanel styleName="{style.container}">
        <g:FlowPanel styleName="{style.centered}">
            <g:Label>First name</g:Label>
            <g:TextBox ui:field="firstName" styleName="{style.input}"></g:TextBox>
            <g:Label>Last name</g:Label>
            <g:TextBox ui:field="lastName" styleName="{style.input}"></g:TextBox>
            <g:Label>Email</g:Label>
            <g:TextBox ui:field="email" styleName="{style.input}"></g:TextBox>
            <g:Button ui:field="cancelButton" styleName="{style.button}">Cancel</g:Button>
            <g:Button ui:field="saveButton" styleName="{style.button}">Save</g:Button>
        </g:FlowPanel>

    </g:FlowPanel>

</ui:UiBinder>